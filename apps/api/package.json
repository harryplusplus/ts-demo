{
  "name": "api",
  "type": "commonjs",
  "scripts": {
    "build": "nest build",
    "check-types": "tsc --noEmit",
    "check-types.dev": "tsc -w --noEmit",
    "dev": "concurrently --kill-others-on-fail --names \"start,types\" \"pnpm start.dev\" \"pnpm check-types.dev\"",
    "start.dev": "nest start -w",
    "start.prod": "node dist/main.js",
    "gen-types.db": "kysely-codegen",
    "gen-types.env": "node scripts/gen-types-env.mts",
    "db.migrate": "node scripts/flyway.mts migrate"
  },
  "dependencies": {
    "@nestjs/common": "11.1.6",
    "@nestjs/core": "11.1.6",
    "@nestjs/platform-express": "11.1.6",
    "dotenv": "17.2.2",
    "http-terminator": "3.2.0",
    "kysely": "0.28.7",
    "nestjs-graceful-shutdown": "1.0.3",
    "pg": "8.16.3",
    "source-map-support": "0.5.21"
  }
}
