{
  "name": "api",
  "type": "commonjs",
  "scripts": {
    "build": "nest build",
    "check-types": "tsc --noEmit",
    "check-types.dev": "tsc -w --noEmit",
    "dev": "concurrently --kill-others-on-fail --names \"start,types\" \"pnpm start.dev\" \"pnpm check-types.dev\"",
    "start.dev": "nest start -w",
    "start.prod": "node dist/main.js",
    "gen-types.db": "kysely-codegen",
    "gen-types.env": "node scripts/gen-types-env.mts",
    "migrate-db": "node scripts/flyway.mts migrate",
    "migrate-db.dev": "pnpm migrate-db && pnpm gen-types.db"
  },
  "dependencies": {
    "@nestjs-cls/transactional": "3.1.0",
    "@nestjs-cls/transactional-adapter-kysely": "1.4.0",
    "@nestjs/common": "11.1.6",
    "@nestjs/core": "11.1.6",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/platform-express": "11.1.6",
    "bcrypt": "6.0.0",
    "date-fns": "4.1.0",
    "dotenv": "17.2.2",
    "express": "5.1.0",
    "http-terminator": "3.2.0",
    "kysely": "0.28.7",
    "nestjs-cls": "6.0.1",
    "nestjs-graceful-shutdown": "1.0.3",
    "nestjs-kysely": "3.1.1",
    "pg": "8.16.3",
    "source-map-support": "0.5.21",
    "zod": "4.1.9"
  }
}
